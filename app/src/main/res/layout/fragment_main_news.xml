<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ListView
        android:id="@+id/fragment_main_news_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
    <!--当无网络或者网络差时重新刷新的按钮-->
    <LinearLayout
        android:id="@+id/fragment_main_news_rl_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainnewsrefreshbackgroud"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">
        <ImageView
            android:id="@+id/fragment_main_news_iv_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_error_dark"/>
        <TextView
            android:id="@+id/fragment_main_news_tv_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_news_refresh"
            android:textColor="@color/main_news_refresh"
            android:layout_marginTop="30dp"/>
    </LinearLayout>

</RelativeLayout>
