<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_news_item_bd"
    android:layout_marginTop="10dp">


    <LinearLayout
        android:id="@+id/item_lv_main_fragment_ll_right"
        android:layout_width="30dp"
        android:layout_alignParentRight="true"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_lv_main_fragment_head"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/item_lv_main_fragment_tv_comment_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorPrimary"
            android:text="123"/>
    </LinearLayout>

    <LinearLayout
        android:layout_toLeftOf="@+id/item_lv_main_fragment_ll_right"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_lv_main_fragment_tv_come_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="来自程序员"/>

        <TextView
            android:id="@+id/item_lv_main_fragment_tv_news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="title"/>
        <TextView
            android:id="@+id/item_lv_main_fragment_tv_news_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="content"/>
    </LinearLayout>
</RelativeLayout>